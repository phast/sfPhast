::-moz-focus-inner {
   padding: 0;
   border: 0;
}

[button] {
   -webkit-tap-highlight-color rgba(0,0,0,0)
   transition none .3s ease
   transition-property border, color, opacity, background
   transform-style preserve-3d

   box-sizing border-box
   vertical-align top
   display inline-block
   position relative

   margin-right .5em
   padding (18/14)em (35/14)em
   border 1px solid $color-vk
   border-radius 0
   background $color-vk

   color #fff
   font-family $font-main
   font-weight 600
   font-size 14px
   line-height 1
   letter-spacing .18em

   white-space nowrap
   text-align center
   text-transform uppercase
   text-decoration none
   user-select none
   cursor pointer
   &:hover {
      background lighten($color-vk, 20%)
      text-shadow 0 1px 1px rgba(#000, .3)
      color #fff
   }
   &.is-active,
   &:active {
      background lighten($color-vk, 20%)
      box-shadow inset 0 2px 5px rgba(#000, .2)
      text-shadow none
   }
   &:disabled,
   &.is-disabled {
      cursor default
   }
   &:last-child {
      margin-right 0
   }
}
[button]{ // Иконка
   & > i {
      transition all .3s ease
      vertical-align middle
      display inline-block
      margin-right .5em
   }
   &:hover > i {}
}
[button~='full'] {
   width 100%
}
