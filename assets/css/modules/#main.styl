html,
body {
   height 100%
   background #fff
}

.is-grabbing,
.is-grabbing * {
   cursor move
   cursor -moz-grabbing
   cursor -webkit-grabbing
   cursor grabbing
}

html {
   backface-visibility hidden
}

body,
input,
select,
textarea,
label,
button {
   color $color-text
   font-family $font-main
   font-weight 400
   font-size 14px
   line-height 18px
}

input,
textarea {
   +placeholder() {
      color inherit
      font-size inherit
      line-height inherit
   }
}

h1, $h1,
h2, $h2,
h3, $h3,
h4, $h4,
h5, $h5,
h6, $h6 {
   color $color-grey
   font-family $font-title
   font-weight 600
   text-align inherit
}
$h1,
h1 {
   margin-bottom (15/32)em
   color $color-grey
   font-size (32/14)em
   line-height (40/32)
   text-transform uppercase
   +do(600) {
      font-size (24/14)em
   }
}
$h2,
h2 {
   margin-bottom (15/32)em
   color $color-grey
   font-size (32/14)em
   line-height (40/32)
   text-transform uppercase
   +do(600) {
      font-size (24/14)em
   }
}
$h3,
h3 {
   margin-bottom (15/22)em
   color $color-grey
   font-size (22/14)em
   line-height (28/22)
   text-transform uppercase
   +do(600) {
      font-size (20/14)em
   }
}
$h4,
h4 {
   margin-bottom 1em
   color $color-grey
   font-size (16/14)em
   line-height 1.3
   text-transform uppercase
}

a {
   transition none .2s ease
   transition-property color, background
   color $color-link
   text-decoration none
   &:hover {
      color $color-link-h
   }
   &[href^='tel:'] {
      border 0 !important
      color inherit !important
      text-decoration none !important
   }
}

small {
   font-size .8em
}

p img,
p iframe {
   max-width 100%
}
$p,
p,
table,
ul,
ol,
blockquote {
   margin-bottom (16/14)em
}
li {
   margin-bottom (8/14)em
}

ul,
ol {
   display table
   & > br {
      display none
   }
   li:last-child {
      margin-bottom 0
   }
}
ul > li {
   padding-left (24/14)em
   &:before {
      content 'â€”'
      float left
      margin-left -(24/14)em
   }
}
ul[type='none'] > li {
   padding-left 0
   &:before {
      content normal
   }
}
ol {
   counter-reset nums
}
ol > li {
   counter-increment nums
   padding-left (24/14)em
   &:before {
      content counter(nums) '.'
      float left
      margin-left -(24/14)em
      width (20/14)em
      text-align right
   }
}

table {
   @extend $p
   // width 100%
   // line-height (20/14)
}
tr {}
td,
th {
   vertical-align top
   width auto
   padding .75em 0
   border 1px solid lighten(#cecece, 70%)
   border-width 1px 0
   +suff('td' 'th', '+') {
      padding-left 1.5em
   }
}
th {
   padding-top (18/14)em
   padding-bottom (18/14)em
   // background #8ea4af
   font-weight 700
   font-size 16px
   border-color $color-red
   border-width 0 0 3px
}
td {
   // background #f5f5f5
   // tr:nth-child(odd) > & {
      // background #ececec
   // }
}

img[data-src] {
   transition opacity .3s ease-in
   opacity 0
   &.is-loaded {
      opacity 1
   }
}

.img-fl-l {
   float left
   margin-right 1.5em
   +do(500) {
      float none
      margin-right 0
   }
   img {
      @extend $p
      +do(500) {
         width 100%
         height auto
      }
   }
}
.img-fl-r {
   float right
   margin-left 1.5em
   +do(500) {
      float none
      margin-right 0
   }
   img {
      @extend $p
      +do(500) {
         width 100%
         height auto
      }
   }
}

.clear{
   clear(fix)
}

.bx-core-waitwindow{
   display none !important
}

.external-code {
   & > p {
      display none
   }
}
